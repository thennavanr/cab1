<%= form_for @reservation, :url => new_home_path, :html => {:id => 'home-contact' ,  :method => 'post' } do |f| %>
  <div class="col-sm-8">
    <div class="carousel-content">
      <div class="form-group">
        <%= f.text_field :name,  :placeholder=>"Name", :class=>"form-control", :required=>"required" %>
      </div>
      <div class="form-group">
        <%= f.text_field name="name" , :placeholder=>"Email" , :class=>"form-control", :required=>"required" %>
      </div>
      <div class="form-group">
        <%= f.text_field name="name" , :placeholder=>"Phone" , :class=>"form-control", :required=>"required" %>
      </div>
      <div class ="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= f.text_field name="name" , :placeholder=>"Pickup Date" , :class=>"form-control", :required=>"required" %>
          </div>
        </div>

        <div class="col-sm-3">
          <div class="form-group">
            <%= f.text_field name="name" , :placeholder=>"Hr" , :class=>"form-control", :required=>"required" %>
          </div>
        </div>
        <div class="col-sm-3">
          <div class="form-group">
            <%= f.text_field name="name" , :placeholder=>"Min" , :class=>"form-control", :required=>"required" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.text_field name="name" , :placeholder=>"Pickup Address" , :class=>"form-control", :required=>"required" %>
      </div>
      <div class="form-group">
        <%= f.text_field name="name" , :placeholder=>"Drop-off Address" , :class=>"form-control", :required=>"required" %>
      </div>

      <a class="btn-slide animation animated-item-3" href="#">Book</a>
    </div>

    <div class = "col-sm-4">
    </div>
  </div>
<%end %>
