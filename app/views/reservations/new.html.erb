
<section id="contact-info">
    <div class="center">                
  <h2>Want to Book a Cab?</h2>
  <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit</p>
</div>

<div class="gmap-area" style= "background-image: url(<%=  asset_path "map.jpg" %> );" >
        <div class="container">
            <div class="row contact-wrap"> 
              <%= form_for @reservation, :url => reservations_path, :html => {:id => 'main-contact-form' , :class => 'reservation-form' , :name => 'reservation-form' , :method => 'post' } do |f| %>
                     <div class="col-sm-5 col-sm-offset-1">
                        <div class="form-group">
                            <%= f.label :Name %>
                            <%= f.text_field :name, :class => 'form-control' , :required => 'required'%>
                        </div>
                        <div class="form-group">
                            <%= f.label :Phone %>
                            <%= f.telephone_field :phone, :class=> 'form-control' , :required => 'required' %>
                        </div>

                        <div class="form-group">
                            <%= f.label 'Pick-up Address' %>
                            <%= f.text_field 'from_add', :class =>'form-control' %>
                        </div>
                          
                <div class ="row">
                                             
                    <div class="col-sm-6">
                            <div class="form-group">
                            <%= f.label 'Pick-up Date'  %>
                            <%= f.date_field :pickup_date , :value => Date.today , :class=>"form-control", :required=>"required" %>
                            </div>
                    </div>
                    <div class="col-sm-6">
                    <div class="form-group">
                            <%= f.label 'Time'  %>
                            <%= f.select :time , options_for_select(   [['12:00 AM',1], ['12:30 AM', 30],['1:00 AM', 60],['1:30 AM', 90],['2:00 AM', 120],['2:30 AM', 150],['3:00 AM', 180],['3:30 AM', 210],['4:00 AM', 240],['4:30 AM', 270],['5:00 AM',300],['5:30 AM',330],['6:00 AM',360],['6:30 AM',390],['7:00 AM',420],['7:30 AM',450],['8:00 AM',480],['8:30 AM',510],['9:00 AM',540],['9:30 AM',570],['10:00 AM',600],['10:30 AM',630],['11:00 AM',660],['11:30 AM',690],['12:00 PM',720],['12:30 PM',750],['1:00 PM',780],['1:30 PM',810],['2:00 PM',840],['2:30 PM',870],['3:00 PM',900],['3:30 PM',930],['4:00 PM',960],['4:30 PM',990],['5:00 PM',1020],['5:30 PM',1050],['6:00 PM',1080],['6:30 PM',1110],['7:00 PM',1140],['7:30 PM',1170],['8:00 PM',1200],['8:30 PM',1230],['9:00 PM',1260],['9:30 PM',1290],['10:00 PM',1320],['10:30 PM',1350],['11:00 PM',1380],['11:30 PM',1410]] ,630),{}, {:class =>'form-control'}  %>

                    </div>
                    </div>
                </div>     <!--row-->
                    </div>

                    <div class="col-sm-5">

                        <div class="form-group">
                            <%= f.label :Email  %>
                            <%= f.text_field 'email',  :class => 'form-control' , :required => 'required' %>
                        </div>
                        <div class="form-group">
                            <%= f.label 'Drop-off Address' %>
                            <%= f.text_field 'to_add', :class =>'form-control' %>
                        </div>                        

                        <div class="form-group">
                            <%= f.label :Vehicle %>
                            <%= f.select 'vechile', options_for_select([['Sedan',1],['SUV',2],['Van',3],['Limosine',4],['Streched Limosine',5]],2),{}, {:class =>'form-control'}  %>
                        </div>

                        <div class="form-group">
                            <%= f.submit 'Submit', :class => 'btn btn-primary btn-lg' , :required => 'required' %>
                        </div>
                    </div>
                  <%end%>
</div><!--/.row-->
</div><!--/.container-->
</div>
</section>
